.authform
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3 Log in
    = devise_error_messages!
    .form-group
      - if devise_mapping.registerable?
        = link_to 'Sign up', new_registration_path(resource_name), class: 'right'
      = f.label :email
      = f.email_field :email, class: 'form-control'
    .form-group
      - if devise_mapping.recoverable?
        = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
      = f.label :password
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.submit 'Log in', class: 'button', id: "sign-in-btn"
    - if devise_mapping.rememberable?
      .form-group
        .checkbox
          = f.check_box :remember_me
          = f.label :remember_me
        %hr/
        / NEEDED THIS TO HELP FIGURE OUT WHY IT WASN'T LOGGING IN!
        %p.text-warning= notice
        %p.text-danger= alert
